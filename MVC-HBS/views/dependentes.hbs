<div class="row">
    <div class="col-11">
        <h1 class="display-4">Dependentes</h1>
    </div>
    <div class="col-1">
        <a href="/funcionarios/cadastro_funcionario" class="btn btn-primary" role="button">
            <i class="material-icons">add</i>
        </a> 
    </div>
</div>

<table class="table">
    <thead>
        <tr>
            <th scope ="col">ID</th>
            <th scope ="col">Nome</th>
            <th scope ="col">Telefone</th>
            <th scope ="col">Funcionario_Id</th>
            <th scope="col">Ação</th>
        </tr>
    </thead>
    <tbody>
        {{#each data}}
        <tr>
            <td>{{id}}</td>
            <td>{{nome}}</td>
            <td>{{telefone}}</td>
            <td>{{funcionario_id}}</td>
            <td>
                <div class="btn-toolbar mb-3" role="toolbar">
                    <div class="btn-group mr-2">
                        <button type="button" class="btn btn-success" onclick="editar({{ID}})">
                            <span class="material-icons">edit</span>
                        </button>
                        <button type="button" class="btn btn-danger" onclick="excluir({{ID}})">
                            <span class="material-icons">delete</span>
                        </button>
                    </div>
                </div>
            </td>
        </tr>
        {{/each}}
    </tbody>
</table>

<script>
    async function excluir(id) {
        await fetch(`/funcionarios/${id}`,
         { method: "delete", headers: { "Content-Type": "application/json" } });

         window.location.href = "/funcionarios"
    }
</script>